<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="right"
        android:text="0"
        android:inputType="numberDecimal"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="611dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText">

        <Button
            android:id="@+id/equalButton"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_below="@id/addButton"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="-3dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/dotButton"
            android:text="="
            android:textSize="20dp" />

        <Button
            android:id="@+id/clearButton"
            android:layout_width="310dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:text="Clear" />

        <Button
            android:id="@+id/divideButton"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@id/clearButton"
            android:text="/" />

        <Button
            android:id="@+id/button7"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_below="@+id/clearButton"
            android:layout_marginStart="10dp"
            android:text="7"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_below="@id/clearButton"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/button7"
            android:text="8"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_below="@id/clearButton"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/button8"
            android:text="9"
            android:textSize="20dp" />

        <Button
            android:id="@+id/multiplyButton"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_below="@id/divideButton"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/button9"
            android:text="*"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button7"
            android:layout_marginStart="10dp"
            android:text="4"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_below="@id/button8"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/button4"
            android:text="5"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_below="@id/button9"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/button5"
            android:text="6"
            android:textSize="20dp" />


        <Button
            android:id="@+id/subtractButton"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_below="@id/multiplyButton"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/button6"
            android:text="-"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button4"
            android:layout_marginStart="10dp"
            android:text="1"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_below="@id/button5"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/button1"
            android:text="2"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_below="@id/button6"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/button2"
            android:text="3"
            android:textSize="20dp" />


        <Button
            android:id="@+id/addButton"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_below="@id/subtractButton"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="-6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/button3"
            android:text="+"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="0"
            android:textSize="20dp" />

        <Button
            android:id="@+id/dotButton"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button3"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-1dp"
            android:layout_toEndOf="@+id/button0"
            android:text="." />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>